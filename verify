<?php
include "db_connect.php";

if (isset($_GET['id'])) {
    $id = intval($_GET['id']);

    $query = "UPDATE tablespot SET status='Verified' WHERE id=$id";
    if (mysqli_query($conn, $query)) {
        echo "<script>alert('Booking successfully verified!'); window.location.href='admin_menu.php';</script>";
    } else {
        echo "<script>alert('Failed to verify booking.'); window.location.href='admin_menu.php';</script>";
    }
} else {
    header("Location: admin_menu.php");
}
?>
